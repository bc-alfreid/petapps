<%= simple_form_for(@pet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :breed %>
    <%= f.input :age %>
    <%= f.input :size, collection: ['Small', 'Medium', 'Large'] %>
    <%= f.input :picture %>
    <%= f.input :availability %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
